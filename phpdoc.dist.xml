<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Poweradmin</title>
    <parser>
        <target>docs</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility/>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <logging>
        <level>warn</level>
        <!--
                <paths>
                    <default>logs/phpdoc/{DATE}.log</default>
                    <errors>logs/phpdoc/{DATE}.error.log</errors>
                </paths>
        -->
    </logging>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>.</directory>
        <ignore>addons/*</ignore>
        <ignore>install/*</ignore>
        <ignore>logs/*</ignore>
        <ignore>tests/*</ignore>
        <ignore>vendor/*</ignore>
        <ignore>inc/config.inc.php</ignore>
    </files>
</phpdoc>
