{
  "name": "poweradmin",
  "version": "1.0.0",
  "description": "[Poweradmin](https://www.poweradmin.org) is a friendly web-based DNS administration tool for PowerDNS server.",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:mysql": "BASE_URL=http://localhost:8080 playwright test --project=chromium",
    "test:e2e:pgsql": "BASE_URL=http://localhost:8081 playwright test --project=chromium",
    "test:e2e:sqlite": "BASE_URL=http://localhost:8082 playwright test --project=chromium"
  },
